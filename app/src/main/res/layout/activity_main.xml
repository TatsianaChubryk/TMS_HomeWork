<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/layoutSpinner"
        android:layout_width="413dp"
        android:layout_height="175dp"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/tvSelectDistrict"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="@string/tvSelectDistrict"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spinnerDistrict"
            android:layout_width="266dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tvSelectVegetables"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/tvSelectVegetables"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spinnerVegetable"
            android:layout_width="263dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown"
            tools:ignore="MissingConstraints" />


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layoutDistrict"
        android:layout_width="412dp"
        android:layout_height="400dp"
        android:layout_marginTop="300dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/layoutSpinner"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/tvBrest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:text="@string/tvBrest"
            android:textColor="@color/teal_700"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvPotatoBrest"
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="147dp"
            android:layout_marginTop="4dp"
            android:text="@string/Potato"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvCabbageBrest"
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="147dp"
            android:layout_marginTop="34dp"
            android:text="@string/Cabbage"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvBeetBrest"
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="147dp"
            android:layout_marginTop="64dp"
            android:text="@string/Beet"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvGrodno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="111dp"
            android:text="@string/tvGrodno"
            android:textColor="@color/teal_700"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvPotatoGrodno"
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="147dp"
            android:layout_marginTop="110dp"
            android:text="@string/Potato"

            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvCabbageGrodno"
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="147dp"
            android:layout_marginTop="145dp"
            android:text="@string/Cabbage"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvBeetGrodno"
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="147dp"
            android:layout_marginTop="180dp"
            android:text="@string/Beet"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvMinsk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="136dp"
            android:text="@string/tvMinsk"
            android:textColor="@color/teal_700"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvPotatoMinsk"
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="147dp"
            android:layout_marginTop="236dp"
            android:text="@string/Potato"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvResultPotatoMinsk"
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="236dp"
            android:layout_marginEnd="62dp"
            android:text="0"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvResultPotatoBrest"
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="62dp"
            android:text="50"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvResultCabbageBrest"
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="62dp"
            android:text="0"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvResultBeetBrest"
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="67dp"
